# Production Environment Variables Template
# Copy this to .env.production and fill in actual values

# Database - Provided by Railway PostgreSQL Plugin
# Railway will automatically set this via ${{Postgres.DATABASE_URL}}
DATABASE_URL="postgresql://user:password@host:port/database?schema=public"

# Server Configuration
PORT=3001
NODE_ENV=production

# CORS - Railway provides this via ${{RAILWAY_PUBLIC_DOMAIN}}
# Use your Railway subdomain: https://your-app.up.railway.app
CORS_ORIGIN=https://your-app.railway.app

# Optional: Connection Pooling
DATABASE_CONNECTION_LIMIT=10
DATABASE_POOL_TIMEOUT=60

# Optional: Prisma Logging in Production
# PRISMA_LOG_LEVEL=info

# Optional: Error Tracking (e.g., Sentry)
# SENTRY_DSN=your-sentry-dsn
